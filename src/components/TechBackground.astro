<style>
    /* Custom Float Animations */
    @keyframes float-slow {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-20px) rotate(5deg);
        }
    }
    @keyframes float-medium {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-15px) rotate(-5deg);
        }
    }
    @keyframes float-fast {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-10px) rotate(3deg);
        }
    }

    .animate-float-slow {
        animation: float-slow 6s ease-in-out infinite;
    }
    .animate-float-medium {
        animation: float-medium 5s ease-in-out infinite;
    }
    .animate-float-fast {
        animation: float-fast 4s ease-in-out infinite;
    }
</style>

<script>
    const container = document.querySelector(".tech-background");
    const icons = document.querySelectorAll(".tech-icon");

    if (container) {
        container.addEventListener("mousemove", (e) => {
            // @ts-ignore
            const { clientX, clientY } = e;
            // @ts-ignore
            const { innerWidth, innerHeight } = window;

            // Calculate mouse position relative to center [-1, 1]
            const x = (clientX - innerWidth / 2) / (innerWidth / 2);
            const y = (clientY - innerHeight / 2) / (innerHeight / 2);

            icons.forEach((icon) => {
                // @ts-ignore
                const speed = parseFloat(
                    icon.getAttribute("data-speed") || "0.5",
                );
                const moveX = x * 40 * speed; // Max movement in px
                const moveY = y * 40 * speed;

                // @ts-ignore
                icon.style.transform = `translate(${moveX}px, ${moveY}px)`;
            });
        });

        // Optional: Reset on mouse leave
        container.addEventListener("mouseleave", () => {
            icons.forEach((icon) => {
                // @ts-ignore
                icon.style.transform = `translate(0px, 0px)`;
                // @ts-ignore
                icon.style.transition = "transform 0.5s ease-out";
            });
        });

        container.addEventListener("mouseenter", () => {
            icons.forEach((icon) => {
                // @ts-ignore
                icon.style.transition = "transform 0.1s ease-out";
            });
        });
    }
</script>
